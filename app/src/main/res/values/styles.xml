<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_search_tab" parent="Widget.Design.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabMaxWidth">@dimen/dp260</item>
        <item name="tabMinWidth">@dimen/dp72</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">@color/red_text</item>
        <item name="android:textColor">@color/text_00</item>
        <item name="tabTextColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
